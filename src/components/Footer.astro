---
import data from '../data/portfolio.json';
const linkedin = data.social?.linkedin;
---
<footer class="w-full py-12 border-t border-border-color mt-12 bg-surface/50">
  <div class="max-w-[1280px] mx-auto px-6 flex flex-col md:flex-row items-center justify-center gap-4 text-center">
    <div class="text-xs text-text-muted opacity-50 font-mono">
      {data.footer}
    </div>
    {linkedin ? (
      <a
        href={linkedin.url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={linkedin.label}
        class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-border-color bg-surface hover:bg-surface-hover hover:border-accent-secondary/60 transition-colors"
      >
        <svg
          class="w-5 h-5 text-black dark:text-white"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            fill="currentColor"
            d="M22.225 0H1.771C.792 0 0 .774 0 1.727v20.545C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.273V1.727C24 .774 23.2 0 22.225 0zM7.119 20.451H3.556V9h3.563v11.451zM5.337 7.433c-1.144 0-2.067-.926-2.067-2.066 0-1.14.923-2.066 2.067-2.066 1.141 0 2.066.926 2.066 2.066 0 1.14-.925 2.066-2.066 2.066zM20.451 20.451h-3.554v-5.569c0-1.328-.026-3.038-1.852-3.038-1.853 0-2.136 1.445-2.136 2.94v5.667H9.355V9h3.414v1.561h.047c.476-.9 1.636-1.852 3.366-1.852 3.599 0 4.266 2.369 4.266 5.455v6.287z"
          />
        </svg>
        <span class="sr-only">{linkedin.label}</span>
      </a>
    ) : null}
  </div>
</footer>
