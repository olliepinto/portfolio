---
import '../styles/global.css';
import '@fontsource/geist-sans';
import '@fontsource/geist-mono';
const { title } = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
        <script is:inline>
            // Force Light Mode by default. Only enable dark if explicitly stored.
            if (localStorage.theme === 'dark') {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        </script>
	</head>
	<body class="bg-bg-depth text-text-primary transition-colors duration-300">
		<main class="w-full min-h-screen flex flex-col items-center overflow-x-hidden">
			<slot />
		</main>
	</body>
</html>